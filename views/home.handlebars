        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </figure>

    <section class="py-5 imageSection">
        <div class="container-fluid">
            <figure
                class="row row-cols-xs-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-3 row-cols-xxl-4 g-3 roverImageRows">
            </figure>
        </div>
    </section>

</main>